extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12
                include ../layout/partials/testimoniales
                        
            .col-md-12        
                h2.text-center Agrega un testimonio
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                        
                    
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", placeholder="Tu nombre", name="nombre", id="nombre", class="form-control", value=nombre)
                                label(for="correo") Correo
                                input(type="email", placeholder="Tu correo", name="correo", id="correo", class="form-control", value=correo)
                                label(for="mensaje") Mensaje
                                textarea#mensaje(placeholder="Tu mensaje", rows="3", name="mensaje", class="form-control")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")